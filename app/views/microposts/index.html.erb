<% provide(:title, "Create Post") %>
<center><h1>Create Post</h1></center>

<%= form_for :micropost do |f| %>
<div class="row">
  <div class="span6 offset4">
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="span1">
  <div class="actions"><br>

    <%= f.submit "Post", class: "btn btn-large btn-primary" %>
  </div>
<% end %>
