<div class="container">
  <h2>Sign in</h2>
  <br>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="input-group">
        <%= f.email_field :email, :autofocus => true, placeholder: "Username", class: "form-control" %>
      </div><!-- input-group -->
    </div><!-- row -->
    <br>
    <div class="row">
      <div class="input-group">
        <%= f.password_field :password, autofocus: true, placeholder: "Password", class: "form-control" %>
      </div>
      <div class="input-group">
        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me, type: "input" %>
          <%= f.label :remember_me %>
        <% end -%>
      </div>
      <br>
      <%= f.submit "Sign in", class: "btn btn-default pull-left" %>
    </div><!-- row -->
  <% end %>
</div><!-- containter -->

<br>

<div class="container">
  <div class="input-group">
    <%= render "devise/shared/links" %>
  </div>
</div>
