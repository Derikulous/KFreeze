<div class="container">
  <h2>Sign up</h2>
  <br>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="input-group">
        <%= f.email_field :email, :autofocus => true, placeholder: "Username", class: "form-control" %>
      </div><!-- input-group -->
    </div><!-- row -->
    <br>

    <div class="row">
      <div class="input-group">
        <%= f.password_field :password, autofocus: true, placeholder: "Password", class: "form-control" %>
      </div><!-- input-group -->
    </div><!-- row -->
    <br>

    <div class="row">
      <div class="input-group">
        <%= f.password_field :password_confirmation, autofocus: true, placeholder: "Password Confirmation", class: "form-control" %>
      </div><!-- input-group -->
    </div><!-- row -->
    <br>

  <div><%= f.submit "Sign up", class: "btn btn-success pull-left" %></div>
<% end %>
<br>

<div class="container">
  <div class="input-group">
<%= render "devise/shared/links" %>
  </div>
</div>

