<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <h3>Post Feed</h3>
        <%= render 'shared/feed' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center">
    <h1>Welcome to KFreeezePop</h1>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("Header.png", alt: "KfreezePop"), 'http://kfreezepop.com' %>
<% end %>
